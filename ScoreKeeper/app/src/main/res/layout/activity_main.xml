<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.rosehulman.fisherds.scorekeeper.MainActivity">

    <TextView
        android:id="@+id/exampleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fixesLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:text="0 points"/>

    <LinearLayout
        android:id="@+id/fixButtons"
        android:layout_below="@id/exampleLabel"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Fixed 3"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Fixed 2"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Fixed 1"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Fixed 0"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distances:"
        android:layout_below="@id/fixButtons"/>

</RelativeLayout>
